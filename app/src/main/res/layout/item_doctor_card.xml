<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Doctor Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/doctorAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_doctor_placeholder"
                android:scaleType="centerCrop"
                android:contentDescription="Doctor" />

        </androidx.cardview.widget.CardView>

        <!-- Doctor Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <!-- Name & Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/doctorName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dr. Fatima Zahra"
                    style="@style/TextHeading3"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/verifiedBadge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_verified"
                    android:tint="@color/info"
                    android:contentDescription="Verified"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- Specialty -->
            <TextView
                android:id="@+id/doctorSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Médecine Générale"
                style="@style/TextBody2"
                android:textColor="@color/primary_medium"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Rating & Experience Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        android:tint="@color/warning"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Rating" />

                    <TextView
                        android:id="@+id/doctorRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        style="@style/TextBody2"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Experience -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_experience"
                        android:tint="@color/text_hint"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Experience" />

                    <TextView
                        android:id="@+id/doctorExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 ans"
                        style="@style/TextCaption" />

                </LinearLayout>

            </LinearLayout>

            <!-- Location & Availability -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Location -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/text_hint"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Location" />

                    <TextView
                        android:id="@+id/doctorLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanger"
                        style="@style/TextCaption"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Availability Badge -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/availabilityBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/success"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/availabilityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponible"
                        android:textColor="@color/text_white"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/primary_medium"
            android:contentDescription="View details" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

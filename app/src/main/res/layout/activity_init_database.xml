<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:src="@android:drawable/ic_menu_manage"
            app:tint="#6200EE" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Initialisation Base de DonnÃ©es"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="monospace" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Initialize Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInitialize"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="ðŸ”„ Initialiser la base de donnÃ©es"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="En attente..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="monospace"
                android:gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Warning -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="âš ï¸ Ã€ utiliser une seule fois au dÃ©but du projet"
            android:textSize="12sp"
            android:textColor="#D32F2F"
            android:textStyle="italic" />

    </LinearLayout>

</ScrollView>
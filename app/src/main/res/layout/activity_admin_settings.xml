<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_background"
        android:elevation="4dp"
        app:title="Paramètres du cabinet"
        app:titleTextColor="@color/text_white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Cabinet Info -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informations du cabinet"
                        style="@style/TextHeading3"
                        android:layout_marginBottom="16dp" />

                    <!-- Cabinet Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/InputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nom du cabinet"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/cabinetNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cabinet Médical AppointFlow"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Address -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/InputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adresse"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addressInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Avenue Mohammed V, Tanger"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/InputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Téléphone"
                        app:prefixText="+212 "
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 39 12 34 56"
                            android:inputType="phone"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/InputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="contact@appointflow.ma"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Working Hours -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Horaires d'ouverture"
                            style="@style/TextHeading3" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editHoursButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modifier"
                            android:textColor="@color/primary_medium"
                            app:icon="@drawable/ic_edit"
                            app:iconTint="@color/primary_medium" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lundi - Vendredi : 09:00 - 18:00"
                        style="@style/TextBody2"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samedi - Dimanche : Fermé"
                        style="@style/TextBody2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Appointment Settings -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paramètres des rendez-vous"
                        style="@style/TextHeading3"
                        android:layout_marginBottom="16dp" />

                    <!-- Min booking delay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Délai minimum de réservation"
                            style="@style/TextBody1" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/minDelayChipGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip2h"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2h"
                                android:checked="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip4h"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4h" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip24h"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24h" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                    <!-- Max booking delay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Délai maximum de réservation"
                            style="@style/TextBody1" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/maxDelayChipGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip1month"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 mois" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip3months"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 mois"
                                android:checked="true" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip6months"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 mois" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                    <!-- Reminder timing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Envoyer rappels"
                            style="@style/TextBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/remindersSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notification Settings -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        style="@style/TextHeading3"
                        android:layout_marginBottom="16dp" />

                    <!-- Email notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_email"
                            android:tint="@color/primary_medium"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Email" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notifications email"
                            style="@style/TextBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/emailNotifSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <!-- SMS notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone"
                            android:tint="@color/primary_medium"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="SMS" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notifications SMS"
                            style="@style/TextBody1" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/smsNotifSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveSettingsButton"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enregistrer les paramètres"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_background"
        android:elevation="4dp"
        app:title="Planning global"
        app:titleTextColor="@color/text_white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_white">

        <Spinner
            android:id="@+id/doctorSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:popupBackground="@color/background_card" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Date Navigation -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        android:background="@color/background_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/previousDayButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/primary_medium"
                android:contentDescription="Previous" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/selectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercredi, 25 Décembre 2024"
                    style="@style/TextBody1"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/appointmentsCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 rendez-vous"
                    style="@style/TextCaption"
                    android:textColor="@color/primary_medium" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/nextDayButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_forward"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/primary_medium"
                android:contentDescription="Next" />

            <ImageButton
                android:id="@+id/calendarButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_calendar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/primary_medium"
                android:layout_marginStart="8dp"
                android:contentDescription="Calendar" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- View Mode Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/viewModeTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_card"
        android:elevation="1dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/primary_medium"
        app:tabIndicatorColor="@color/primary_medium"
        app:tabIndicatorHeight="3dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tous" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmés" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En attente" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Appointments Timeline -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timelineRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_calendar"
            android:tint="@color/text_hint"
            android:alpha="0.5"
            android:layout_marginBottom="16dp"
            android:contentDescription="No appointments" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucun rendez-vous"
            style="@style/TextHeading3"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas de rendez-vous pour cette date"
            style="@style/TextBody2"
            android:textAlignment="center" />

    </LinearLayout>

    <!-- FAB Add Appointment -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAppointmentFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Add Appointment"
        app:tint="@color/text_white"
        app:backgroundTint="@color/primary_medium" />

</LinearLayout>

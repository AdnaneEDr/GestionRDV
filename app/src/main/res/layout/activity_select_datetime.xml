<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_secondary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_background"
        android:elevation="4dp"
        app:title="Choisir la date"
        app:titleTextColor="@color/text_white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Calendar Card -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dateTextAppearance="@style/TextBody2"
                    android:weekDayTextAppearance="@style/TextCaption" />

            </androidx.cardview.widget.CardView>

            <!-- Selected Date Display -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Créneaux disponibles"
                style="@style/TextHeading3"
                android:layout_marginBottom="16dp" />

            <!-- Selected Date Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/background_secondary"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/primary_medium"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Date" />

                    <TextView
                        android:id="@+id/selectedDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sélectionnez une date"
                        style="@style/TextBody1"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Time Slots -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matin"
                style="@style/TextBody1"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Morning Slots Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/morningTimeSlotsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Après-midi"
                style="@style/TextBody1"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Afternoon Slots Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/afternoonTimeSlotsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:nestedScrollingEnabled="false" />

            <!-- Confirm Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmButton"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmer le rendez-vous"
                android:enabled="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
